<main class="container">
  <div class="header">
    <h2>Sign in</h2>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login" }) do |f| %>
    <%= f.input :email,
                required: false,
                autofocus: true, wrapper_html: { class: "login__group" },
                input_html: { autocomplete: "email", class: "login__input" } %>
    <%= f.input :password,
                required: false, wrapper_html: { class: "login__group" },
                input_html: { autocomplete: "current-password", class: "login__input" } %>
    <div>
      <%= f.button :submit, class:"btn btn--dark" %>
    </div>
  <% end %>
</main>
